= link_to van_path(van) do
  .van-card-wide
    .van-image{style: 'background: url('"#{van.card_photo}"') center center no-repeat;background-size:cover;'}
      .van-price
        $
        = van.price
    .van-card-content
      .van-title
        = van.title
      .van-make
        = van.make
        = van.model
        = van.year


