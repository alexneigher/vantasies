.container

  .row
    .col-lg-8.col-lg-offset-2
      .row.pad8b
        .col-lg-12
          %h1 What is a company?
        .col-lg-6
          .card.text-center
            %h2
              You do custom van work
            %p
              Do you want to showcase your work? Create a company and post photos of your work.
              People who need work will contact you!

        .col-lg-6
          .card.text-center
            %h2 You sell custom vans
            %p Do you sell vans? Post your vans for sale here at a discounted rate!

      .form-area
        = form_for @company, url: companies_path, method: :post do |f|
          .panel.pad3
            .form-group
              %label Company Name
              = f.text_field :name, class: 'form-control'
            .form-group
              %label Location
              = f.text_field :location, class: 'form-control'
            .form-group
              %label Description
              = f.text_area :description, class: 'form-control'
            .row
              .col-lg-6
                .form-group
                  %label Website
                  = f.text_field :website_url, class: 'form-control'
              .col-lg-6
                .form-group
                  %label Phone Number
                  = f.text_field :phone_number, class: 'form-control'
            .form-group
              %label Services Offerred
              = f.text_field :services_offered, class: 'form-control'

            .form-group
              = f.submit 'Save', class: 'btn btn-primary'
