.container

  .row
    .col-lg-8.col-lg-offset-2
      .row.pad8b
        .col-lg-12
          %h1 Why should I create a company?
          %p Vantasies is creating a centralized location to find local dealers, builders, and rental companies. Make it easy for your local business to be found by people interested in #vanlife. It's $19.99/month to list your business.

      .form-area
        = form_for @company, url: companies_path, method: :post do |f|
          .panel.pad3
            .form-group
              %label Company Name
              = f.text_field :name, class: 'form-control'
            .form-group
              %label Location
              = f.text_field :location, class: 'form-control'
            .form-group
              %label Description
              = f.text_area :description, class: 'form-control'
            .row
              .col-lg-6
                .form-group
                  %label Website
                  .input-group
                    .input-group-addon http://
                    = f.text_field :website_url, class: 'form-control'
              .col-lg-6
                .form-group
                  %label Phone Number
                  = f.text_field :phone_number, class: 'form-control'
            .form-group
              %label Services Offerred
              = f.text_field :services_offered, class: 'form-control'

            .form-group
              = f.submit 'Save', class: 'btn btn-primary'
