.container
  .row.pad4b
    .col-lg-7
      %h1 Vans for Sale
  .row
    - if @vans.present?
      - @vans.each do |van|
        .col-lg-4
          = render partial: "components/van-card", locals: {van: van}
    - else
      .col-lg-12
        %p There are no vehicles currently listed. Be the first!
        = link_to "Post a Van!", new_van_path, class: 'btn btn-primary'
