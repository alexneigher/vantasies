.container
  .row
    .col-lg-8.col-lg-offset-2
      .row
        .col-lg-12
          %h1 Post a Van
        .col-lg-4
          .card.text-center
            %h2
              FREE
            %p Show it off
        .col-lg-4
          .card.text-center
            %h2
              $69
            %p Sell your van
        .col-lg-4
          .card.text-center
            %h2
              $599
            %p Are you a dealer or builer? Get in touch.
      .form-area
        = form_for @van, url: vans_path, method: :post, html: {multipart: true} do |f|
          = render partial: 'shared/new_van_form', locals: {f: f}
          .form-group
            .well
              %h3.m00 Post this van for sale?
              .row
                .col-lg-4
                  .panel.pad1x.m2y
                    .checkbox
                      %label
                        = f.check_box :is_for_sale, checked: false
                        %span{style: "font-size: 20px"} Basic Posting ($99)
              .small
                (We wont charge you until the next step)
              .row
                .col-lg-4
                  .form-group
                    %label Coupon Code
                    = text_field_tag 'coupon_code', nil, class: 'form-control'



          .form-group
            = f.submit 'Save', class: 'btn btn-primary'
